<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    
    <!-- Window and Title Colors -->
    <SolidColorBrush x:Key="TitleBackgroundColor" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TitleForegroundColor" Color="#F1F1F1"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextColor" Color="#F1F1F1"/>
    
    <!-- Selection and Hover Colors -->
    <SolidColorBrush x:Key="SelectedRowBackgroundColor" Color="#3F3F46" />
    
    <!-- Person Picture Theme Brushes -->
    <SolidColorBrush x:Key="PersonPictureForegroundThemeBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="PersonPictureEllipseBadgeForegroundThemeBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="PersonPictureEllipseBadgeFillThemeBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="PersonPictureEllipseBadgeStrokeThemeBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="PersonPictureEllipseFillThemeBrush" Color="#3F3F46"/>
    <x:Double x:Key="PersonPictureEllipseBadgeStrokeOpacity">0.8</x:Double>
    <x:Double x:Key="PersonPictureEllipseBadgeImageSourceStrokeOpacity">1.0</x:Double>
    <x:Double x:Key="PersonPictureEllipseStrokeThickness">0</x:Double>
    <x:Double x:Key="PersonPictureEllipseBadgeStrokeThickness">2</x:Double>

    <!-- Additional Background Colors for Complete Dark Theme -->
    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ControlBackground" Color="#252526"/>
    <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
    <SolidColorBrush x:Key="HoverColor" Color="#3E3E40"/>
    <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>

</ResourceDictionary>
